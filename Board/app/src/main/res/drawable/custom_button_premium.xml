            <solid android:color="@color/chess24_premium_web_active" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/button_outline_corner_size" />
            <padding android:left="@dimen/custom_button_padding_left_right" android:top="@dimen/custon_button_padding_bottom_top" android:right="@dimen/custom_button_padding_left_right" android:bottom="@dimen/custon_button_padding_bottom_top" />
            <solid android:color="@color/chess24_premium_web" />
        </shape>
    </item>
